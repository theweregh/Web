<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Inicio - Proyectos Integradores</title>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/body.css">
    <link rel="stylesheet" href="/css/carouselHome.css">
</head>

<body>
    <%- include('menu') %>

    <main>
        <!-- ====================================== -->
        <!-- Carousel Principal -->
        <!-- ====================================== -->
        <section class="carousel">
            <div class="carousel-track">
                <% featuredProjects.forEach((p, i) => { %>
                    <div class="carousel-slide <%= i === 0 ? 'active' : '' %>">
                        <div class="slide-wrapper">
                            <a href="/projects/<%= p.id %>">
                                <div class="slide-content">
                                    <img src="/assets/<%= p.images[0] %>" alt="<%= p.title %>"
                                        onerror="this.onerror=null; this.src='/assets/NOIMAGE.png';">
                                </div>
                                <div class="carousel-overlay">
                                    <div class="carousel-caption">
                                        <h2><%= p.title %></h2>
                                        <p><%= p.project %></p>
                                        <span><%= p.course %></span> 
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                <% }) %>
            </div>

            <div class="carousel-dots carousel-home-dots">
                <% featuredProjects.forEach((_, i) => { %>
                    <span class="dot <%= i === 0 ? 'active' : '' %>"></span>
                <% }) %>
            </div>
        </section>

        <!-- ====================================== -->
        <!-- Carousel de Comentarios -->
        <!-- ====================================== -->
        <section class="comment-carousel">
            <h2>Últimas declaraciones del jurado</h2>
            <div class="comment-track">
                <% latestComments.forEach((comment, i) => { %>
                    <div class="comment-slide <%= i === 0 ? 'active' : '' %>">
                        <p>"<%= comment.text %>"</p>
                        <h4>— <%= comment.teacher %> (<%= comment.projectTitle %>)</h4>
                    </div>
                <% }) %>
            </div>

            <div class="comment-dots">
                <% latestComments.forEach((_, i) => { %>
                    <span class="dot <%= i === 0 ? 'active' : '' %>"></span>
                <% }) %>
            </div>
        </section>
    </main>

    <%- include('footer') %>

    <!-- Scripts -->
    <script src="/js/home.js"></script>
    <script src="/js/commentsHome.js"></script>
</body>
</html>