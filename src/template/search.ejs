<form method="get" action="/projects/v1.0/list" style="text-align:center; margin-bottom: 1rem;">
  <input
    type="text"
    name="search"
    placeholder="Buscar proyecto, miembro, curso, docente..."
    value="<%= searchQuery %>"
    style="padding:8px 12px; width: 60%; border-radius: 6px; border: 1px solid #ccc;"
  />
  <button type="submit" style="padding:8px 12px; border:none; background:#111827; color:white; border-radius:6px;">
    Buscar
  </button>
</form>
